extends ../layout

append css
  link(rel="stylesheet", href="/css/blog.css")
  link(href="/libs/font-awesome/css/font-awesome.min.css", rel="stylesheet")

block main
  section.container.user-select
    header
      //-超小屏幕不显示
      div.hidden-xs.header
        h1.logo
          a(href="/", title="吉不可nai")
        ul.nav.hidden-xs-nav
          li
            a(href="/")
              i.fa.fa-home
              |&nbsp;网站首页
            each category in categories
              a(href="/blogs/category/" + category.name)
                i.fa.fa-leaf &nbsp;
                = category.name
            a(href="/blogs/about")
              i.fa.fa-user
              |&nbsp;关于我的
            a(href="/blogs/friendly")
              i.fa.fa-tags
              |&nbsp;友情链接
        div.feeds
          a.feed.feed-github(href="https://github.com/jer0701", target="_blank")
            i.fa.fa-github &nbsp;github
          a.feed.feed-zhihu(href="https://www.zhihu.com/people/zhai-xia-yan-jing/", target="_blank")
            i.fa.fa-telegram &nbsp;zhihu
        div.wall
          a(href="/blogs/label") 标签云
      //-超小屏幕可见
      div.visible-xs.header-xs
        div.navbar-header.header-xs-logo
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#header-xs-menu", aria-expanded="false", aria-controls="navbar")
            span.fa.fa-list
        div#header-xs-menu.navbar-collapse.collapse
          ul.nav.navbar-nav.header-xs-nav
            li
              a(href="/")
                i.fa.fa-home
                |&nbsp;网站首页
              each category in categories
                a(href="/blogs/category/" + category.name)
                  i.fa.fa-leaf
                  |&nbsp;
                  i.fa= category.name
              a(href="/blogs/about")
                i.fa.fa-user
                |&nbsp;关于我的
              a(href="/blogs/friendly")
                i.fa.fa-tags
                |&nbsp;友情链接
          form.navbar-form(action="/blogs/", method="get", style="padding:0 25px;")
            div.input-group
              input.form-control(type="text", size="35", name="keywords", placeholder="请输入关键字")
              span.input-group-btn
                button.btn.btn-default.btn-search(type="search") 搜索
    //-超小屏幕可见
    div.content-wrap
      div.content
        block content


    aside.sidebar.visible-lg
      div.sentence
        strong 倒计时
        h2#countdown(data-target="2019-02-09") 距离2019年02月09日
          |还剩
          span
        p 能存到15W么。
      div#search.sidebar-block.search(role="search")
        h2.title
          strong 搜索
        form.navbar-form(action="/blogs/", method="get")
          div.input-group
            input.form-control(type="text", size="35", name="keywords", placeholder="请输入关键字")
            span.input-group-btn
              button.btn.btn-default.btn-search(type="search") 搜索

    footer.footer Powered by &copy;摘下眼镜 &nbsp;&nbsp;&nbsp;
      span
        a(href="http://www.miitbeian.gov.cn/", target="_blank") 粤ICP备xxxxxxx号-1

append script
  script(src="/js/blog.min.js")
