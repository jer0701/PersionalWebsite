extends ../layout_user

block content
  form.form-signin(method='post', action='/admin/login')
    h2.form-signin-heading 登陆
      small.pull-right
        a(href='/admin/register') 注册
    != messages()
    label.sr-only(for='inputEmail') 账号
    input#inputEmail.inputEmail.form-control(name='email', type='email', value=email, placeholder='邮箱', required autofocus)
    label.sr-only(for='inputPassword') 密码
    input#inputPassword.inputPassword.form-control(name='password', type='password', placeholder='密码', required)
    div.checkbox
      label
        input#remember-me(type='checkbox', name="remember", checked)
        | 记住我
    button#login-submit.btn.btn-lg.btn-primary.btn-block(type="submit") 登录

append script
  script(src="/libs/cookies/dist/cookies.min.js")
  script(src="/js/base64.min.js")
  script(src="/js/user.min.js")
